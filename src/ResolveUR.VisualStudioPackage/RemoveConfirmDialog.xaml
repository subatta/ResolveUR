<ui:DialogWindow x:Class="ResolveURVisualStudioPackage.RemoveConfirmDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:ui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.12.0"
                 Title="Reference Removal Confirmation Dialog" Height="100" Width="300"
                 WindowStartupLocation="CenterOwner">
    <Grid Height="60" Width="300">
        <Label Content="Continue with removal of unused references?" Height="25" Name="QuestionLabel"
               VerticalAlignment="Top" />
        <Button Content="Yes" Name="BtnYes" Click="btnYes_Click" Height="25" Width="75" HorizontalAlignment="Left"
                Margin="130,30,0,0" />
        <Button Content="No" Name="BtnNo" Click="btnNo_Click" Height="25" Width="75" HorizontalAlignment="Left"
                Margin="210,30,0,0" />
    </Grid>
</ui:DialogWindow>