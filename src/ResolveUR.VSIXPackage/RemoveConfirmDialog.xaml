<platformUi:DialogWindow x:Class="ResolveUR.VSIXPackage.RemoveConfirmDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:platformUi="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
                 Title="Reference Removal Confirmation Dialog" Height="100" Width="300" WindowStartupLocation="CenterOwner">
    <Grid Height="60" Width="300">
        <Label Content="Continue with removal of unused references?" Height="25" Name="QuestionLabel"
               VerticalAlignment="Top" />
        <Button Content="Yes" Name="BtnYes" Click="BtnYes_Click" Height="25" Width="75" HorizontalAlignment="Left"
                Margin="130,30,0,0" />
        <Button Content="No" Name="BtnNo" Click="BtnNo_Click" Height="25" Width="75" HorizontalAlignment="Left"
                Margin="210,30,0,0" />
    </Grid>
</platformUi:DialogWindow>